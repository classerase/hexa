class CompilerError {
	public var exception: Fail
	public var details: String
	public var line: Int
	public var column: Int
	public var fileName: String

	public function new (except: Fail, ?details: String, ?line: Int, ?column: Int, ?filename: String) {
		this.exception = except
		this.details = details == null ? "" : details
		this.line = line == null ? 0 : line
		this.column = column == null ? 0 : column
		this.fileName = filename == null ? "" : filename
	}

	public function toString() {
		return "[" + this.fileName + ":" + this.line + ":" + this.column + "]: " + this.details
	}
}

enum Fail {
	ParserError
	ParserInternalError
	LexerError
	TyperError
	InfererError
}
